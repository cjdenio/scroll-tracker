{
  "manifest_version": 2,
  "name": "Scroll Tracker",
  "version": "0.1",

  "description": "Browser extension to track your scrolling distance",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_title": "Scroll Tracker",
    "default_popup": "popup/popup.html",
    "browser_style": true
  }
}
